<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml" width="400" height="300" creationComplete="{init()}">

	<mx:Script>
		<![CDATA[
		
			[Bindable]
			private  var _title:String = "Title";
			
			public function set title(value:String):void {
				_title = value;
				//ptitle.text = value;
			}
			
			public function get title():String {
				return _title;
			}
			
			[Bindable]
			private  var _date:Date = new Date();
			
			public function set date(value:Date):void {
				_date = value;
				pdate.text = value.toLocaleDateString();
			}
			
			public function get date():Date {
				return _date;
			}
			
			private function init():void {
				ptitle.text = _title;
				pdate.text = dateFormatter.format(_date);
			}
		]]>
	</mx:Script>
	
	<mx:DateFormatter id="dateFormatter" formatString="DD/MM/YY" />
	
	<mx:VBox width="100%" height="100%"
			paddingTop="2" 
	        paddingBottom="2" 
	        paddingLeft="2" 
	        paddingRight="2">
		
		<mx:Box direction="horizontal" borderStyle="solid"
	        width="100%" height="25">
	        
			<mx:HBox width="100%" height="100%" verticalAlign="middle">
				<mx:Label id="ptitle" text="Title" />
			</mx:HBox>
			
			<mx:HBox width="100" height="100%" verticalAlign="middle" horizontalAlign="center">
				<mx:Label id="pdate" text="{dateFormatter.format(new Date())}" />
			</mx:HBox>
	
	    </mx:Box>
	    
	    <mx:TextArea width="100%" height="100%">
	    	
	    </mx:TextArea>
    
    </mx:VBox>
	
</mx:Canvas>
